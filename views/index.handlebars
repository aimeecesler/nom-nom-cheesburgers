<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4 text-center text-white font-weight-bold">EAT</h1>
    <h1 class="display-4 text-center text-white font-weight-bold">DA</h1>
    <h1 class="display-4 text-center text-white font-weight-bold">BURGER!</h1>
  </div>
</div>
<main class="container">
  <div class="row">
    <div class="col-sm-6">
      <h2 class="text-center">Pick a burger to devour!</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col-sm-6">
      <h2 class="text-center">Wow. You ate all those?</h2>

      <ul class="list-group">
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12 text-center">
      <form class="create-form my-5">
        <h2>Add a Burger</h2>
        <div class="form-group">
          <label for="ca">Burger Name:</label>
          <input type="text" id="ca" name="name">
        </div>

        <button type="submit" class="btn btn-success">Add Burger</button>
      </form>
    </div>
  </div>
</main>